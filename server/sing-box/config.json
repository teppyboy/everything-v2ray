{
  "log": {
    "level": "info",
    "output": "box.log",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "tag": "cloudflare",
        "address": "1.1.1.1",
        "address_strategy": "prefer_ipv4",
        "strategy": "prefer_ipv4"
      }
    ],
    "rules": [
      {
        "domain": [
          "clash.razord.top",
          "yacd.haishan.me"
        ],
        "server": "local"
      },
      {
        "clash_mode": "direct",
        "server": "local"
      }
    ]
  },
  "inbounds": [
    {
      "type": "vmess",
      "tag": "vmess-ws-in",
      "listen": "::",
      "listen_port": 80,
      "tcp_fast_open": true,
      "udp_fragment": true,
      "udp_timeout": 300,
      "domain_strategy": "prefer_ipv4",
      "users": [
        {
          "name": "Default",
          "uuid": "b0940f87-2c9f-4fc9-9d06-750e2f94ba1e"
        }
      ],
      "transport": {
        "type": "ws",
        "path": "/zafkiel"
      }
    },
    {
      "type": "hysteria",
      "tag": "hysteria-in",
      "listen": "::",
      "listen_port": 443,
      "tcp_fast_open": true,
      "udp_fragment": true,
      "udp_timeout": 300,
      "domain_strategy": "prefer_ipv4",
      "up_mbps": 1000,
      "down_mbps": 1000,
      "obfs": "love kurumi tokisaki",
      "users": [
        {
          "name": "D1",
          "auth_str": "zafkiel"
        },
        {
          "name": "Nino",
          "auth_str": "5tobun"
        }
      ],
      "tls": {
        "enabled": true,
        "server_name": "Zafkiel",
        "certificate_path": "server/sing-box/cert.pem",
        "key_path": "server/sing-box/key.pem"
      }
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct-out",
      "connect_timeout": "15s",
      "udp_fragment": true,
      "domain_strategy": "prefer_ipv4"
    },
    {
      "type": "direct",
      "tag": "clash-api",
      "override_address": "127.0.0.1",
      "override_port": 9090
    }
  ],
  "route": {
    "geoip": {},
    "geosite": {},
    "rules": [
      {
        "clash_mode": "direct",
        "outbound": "direct-out"
      },
      {
        "domain": [
          "clash.razord.top",
          "yacd.haishan.me"
        ],
        "outbound": "clash-api"
      }
    ],
    "auto_detect_interface": true
  },
  "experimental"  : {
    "cache_file": {
      "enabled": true,
      "path": "cache.db",
      "cache_id": "everything-v2ray",
      "store_fakeip": true
    }
  }
}

